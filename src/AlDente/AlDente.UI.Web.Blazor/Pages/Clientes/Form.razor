@attribute [Authorize]
<EditForm Model="@Cliente" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Id :</label>
        <div>
            <InputNumber @bind-Value="@Cliente.Id" />
            <ValidationMessage For="@(() => Cliente.Id)" />
        </div>
    </div>
    <div class="form-group">
        <label>Codigo :</label>
        <div>
            <InputText @bind-Value="@Cliente.Nombre" />
            <ValidationMessage For="@(() => Cliente.Nombre)" />
        </div>
    </div>
    <div class="form-group">
        <label>Descripcion :</label>
        <div>
            <InputText @bind-Value="@Cliente.Apellido" />
            <ValidationMessage For="@(() => Cliente.Apellido)" />
        </div>
    </div>
    <div class="form-group">
        <label>Descripcion :</label>
        <div>
            <InputNumber @bind-Value="@Cliente.DNI" />
            <ValidationMessage For="@(() => Cliente.DNI)" />
        </div>
    </div>
    <div class="form-group">
        <label>Descripcion :</label>
        <div>
            <InputText @bind-Value="@Cliente.Telefono" />
            <ValidationMessage For="@(() => Cliente.Telefono)" />
        </div>
    </div>
    <div class="form-group">
        <label>Descripcion :</label>
        <div>
            <InputText @bind-Value="@Cliente.NombreUsuario" />
            <ValidationMessage For="@(() => Cliente.NombreUsuario)" />
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>
@code{
    [Parameter]
    public AlDente.Contracts.Clientes.ClienteDTO Cliente { get; set; }
    [Parameter]
    public string ButtonText { get; set; } = "Save";
    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}