@page "/EstadosClientes/grid"
@attribute [Authorize]
@using Syncfusion.Blazor.Grids
@using AlDente.Contracts.EstadosClientes
@using AlDente.Globalization

@inject IEstadoClienteService EstadoClienteService
@inject IToastService Toast
<h3>Estados del Cliente</h3>
@if (EstadosDeUnCliente == null)
{
    <p><em>Loading...</em></p>
}
else if (EstadosDeUnCliente.Count() == 0)
{
    <p><em>No hay estados del cliente</em></p>
}
<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid DataSource="@EstadosDeUnCliente" Toolbar="@(new List<string>() { "Add", "Edit", "Delete" })" AllowPaging="true">
                <GridEditSettings AllowAdding="true" AllowDeleting="true" AllowEditing="true" Mode="EditMode.Dialog" NewRowPosition="NewRowPosition.Bottom" ShowDeleteConfirmDialog="true" ShowConfirmDialog="true">
                    <Validator>
                        <FluentValidationValidator @ref="fluentValidationValidator" DisableAssemblyScanning="@true" />
                    </Validator>
                    <Template>
                        @{

                            var estado = (context as EstadoClienteDTO);
                            <div class="form-group">
                                <DisplayName For="@(()=>estado.Id)" InputFor="@nameof(EstadoClienteDTO.Id)" />
                                <InputNumber @bind-Value="estado.Id" class="form-control" id="@nameof(EstadoClienteDTO.Id)" />
                                <ValidationMessage For="@(() => estado.Id)" />
                            </div>
                            <div class="form-group">
                                <DisplayName For="@(()=>estado.Codigo)" InputFor="@nameof(EstadoClienteDTO.Codigo)" />
                                <InputText @bind-Value="estado.Codigo" class="form-control" id="@nameof(EstadoClienteDTO.Codigo)" />
                                <ValidationMessage For="@(() => estado.Codigo)" />
                            </div>
                            <div class="form-group">
                                <DisplayName For="@(()=>estado.Descripcion)" InputFor="@nameof(EstadoClienteDTO.Descripcion)" />
                                <InputText @bind-Value="estado.Descripcion" class="form-control" id="@nameof(EstadoClienteDTO.Descripcion)" />
                                <ValidationMessage For="@(() => estado.Descripcion)" />
                            </div>
                            @if (!string.IsNullOrEmpty(error))
                            {
                                <div class="alert alert-danger mt-3 mb-0">@error</div>
                            }
                        }
                    </Template>
                </GridEditSettings>
                <GridEvents TValue="EstadoClienteDTO" OnActionBegin="ActionBeginHandler" OnActionComplete="ActionCompleteHandler"></GridEvents>
                <GridColumns>
                    <GridColumn Field=@nameof(EstadoClienteDTO.Id) Width="140"></GridColumn>
                    <GridColumn Field=@nameof(EstadoClienteDTO.Codigo)></GridColumn>
                    <GridColumn Field=@nameof(EstadoClienteDTO.Descripcion)></GridColumn>
                    <GridColumn HeaderText="@Strings.Actions" Width="150">
                        <GridCommandColumns>
                            <GridCommandColumn Type="CommandButtonType.Edit" ButtonOption="@(new CommandButtonOptions() { IconCss = "e-icons e-edit", CssClass = "e-primary" })"></GridCommandColumn>
                            <GridCommandColumn Type="CommandButtonType.Delete" ButtonOption="@(new CommandButtonOptions() { IconCss = "e-icons e-delete", CssClass = "e-danger" })"></GridCommandColumn>
                        </GridCommandColumns>
                    </GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>

@code {
    public static List<EstadoClienteDTO> EstadosDeUnCliente { get; set; }
    private FluentValidationValidator fluentValidationValidator;
    private string error;

    protected override async Task OnInitializedAsync()
    {

        EstadosDeUnCliente = (await EstadoClienteService.GetAll()).ToList();
    }

    public async Task ActionBeginHandler(ActionEventArgs<EstadoClienteDTO> args)
    {
        try
        {
            if (args.RequestType.Equals(Syncfusion.Blazor.Grids.Action.Save))
            {
                if (args.Action == "Add")
                {
                    await EstadoClienteService.Create(args.Data);
                    Toast.ShowMessage(MessageType.Success, "[Create Success!!!]", "[Se creo con exito]");
                }
                else
                {
                    await EstadoClienteService.Update(args.Data);
                    Toast.ShowMessage(MessageType.Success, "[Updated Success!!!]", "[Se actualizo con exito]");

                }
            }
            if (args.RequestType.Equals(Syncfusion.Blazor.Grids.Action.Delete))
            {
                await EstadoClienteService.Delete(args.Data.Id);
                Toast.ShowMessage(MessageType.Success, "[Delete Success!!!]", "[Se Removio con exito]");
            }
        }
        catch (Exception ex)
        {
            Toast.ShowMessage(MessageType.Error, "Error", ex.Message);
            //error = ex.Message;
            args.Cancel = true;
            //StateHasChanged();
        }
    }
    public async Task ActionCompleteHandler(ActionEventArgs<EstadoClienteDTO> args)
    {
        if (args.RequestType.Equals(Syncfusion.Blazor.Grids.Action.Delete)
            || args.RequestType.Equals(Syncfusion.Blazor.Grids.Action.Save))
        {
            await OnInitializedAsync();
        }
    }
}
